<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:id="@+id/profileFragment_layout"
    android:background="?android:windowBackground"
    android:layout_width="match_parent">

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsing_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        android:background="#ffffff"
        app:scrimAnimationDuration="0">

    <LinearLayout
        android:id="@+id/lltest1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageview_account_profile"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@mipmap/ic_launcher_round"
                android:clickable="true"
                android:focusable="true"/>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">

            <TextView
                android:id="@+id/blankusername"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/usernameDisplay"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="chardesair"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:textColor="@color/colorBlack"
                app:layout_constraintBottom_toTopOf="@+id/pf_name"
                app:layout_constraintStart_toEndOf="@+id/imageview_account_profile"
                app:layout_constraintTop_toBottomOf="@+id/blankusername" />

            <TextView
                android:id="@+id/pf_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Charmeine Wang"
                android:textSize="12sp"
                android:layout_marginStart="12dp"
                android:textColor="@color/colorBlack"
                app:layout_constraintBottom_toTopOf="@+id/blankusername1"
                app:layout_constraintStart_toEndOf="@+id/imageview_account_profile"
                app:layout_constraintTop_toBottomOf="@+id/usernameDisplay" />

                <TextView
                    android:id="@+id/pf_aboutMe"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="12dp"
                    android:text="This is where the bio goes.\n second line of bio \n third line of bio" />
        </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blank0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="" />

            <TextView
                android:id="@+id/numPosts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:text="" />

            <TextView
                android:id="@+id/numChCompleted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:text="" />

            <TextView
                android:id="@+id/numLikes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:text="" />

            <TextView
                android:id="@+id/blank1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blank2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="" />

            <TextView
                android:id="@+id/numPosts_Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingBottom="5dp"
                android:textColor="@color/colorBlack"
                android:text="posts" />

            <TextView
                android:id="@+id/numChCompleted_Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingBottom="5dp"
                android:textColor="@color/colorBlack"
                android:text="challenges completed" />

            <TextView
                android:id="@+id/numLikes_Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textAlignment="center"
                android:paddingBottom="5dp"
                android:textColor="@color/colorBlack"
                android:text="likes" />

            <TextView
                android:id="@+id/blank3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="" />
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"

            android:layout_marginVertical="15dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/igLink"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginHorizontal="5dp"
                android:focusable="true"
                android:src="@drawable/instatemp"
                android:text="Instagram"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/deviantArtLink"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginHorizontal="5dp"
                android:focusable="true"
                android:text="deviantArt"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:src="@drawable/datemp" />

            <TextView
                android:id="@+id/twitterLink"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="twitter"
                android:layout_marginHorizontal="5dp"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:src="@drawable/twittertemp" />
        </LinearLayout>

    </LinearLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarChgHeight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
        <TextView
        android:id="@+id/pf_submissions_noEntries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/pf_submissions_noEntries"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/recyclerview_pf_submissions">
            </androidx.recyclerview.widget.RecyclerView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>