<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:padding= "1dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding= "4dp">

        <TextView
            android:id="@+id/title_ch_slots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/word_title"
            android:background="#8fffffff"
            android:text="Day 10 Submissions"
            android:textSize="15sp"
            android:layout_marginVertical="3dp"
            android:clickable="false"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/viewAll_ch_slots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textinputborder"
            android:text="View All"
            android:textSize="12sp"
            android:layout_marginVertical="3dp"
            android:padding="5dp"
            android:clickable="true"
            android:textStyle="normal"
            android:layout_alignEnd="@+id/recyclerView_view_slots"
            android:focusable="true" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_ch_slots"
            android:id="@+id/recyclerView_view_slots">
        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>